.search-wrap{
  height: 66rpx;
  padding: 20rpx 0;
  background-color: #fff;
  border-bottom: 1px solid #f3f3f3;
}
.search-inner{
  width: 690rpx;
  height: 66rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 26rpx;
  color: #6A6A6A;
  line-height: 66rpx;
  background-color: #f0f0f0;
  border-radius: 35rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search-inner label{
  line-height: 60rpx;
  margin-right: 10rpx;
}
.search-has-content{
  text-align: left;
}
.search-has-content label{
  margin-left: 20rpx;
}

.filter-tab-wrap{
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  border-bottom: 1px solid #F0F0F0;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  color: #666;
}
.tab-item {
  display: inline-block;
  width: 20%;
  -webkit-box-flex: 1;
  -moz-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  text-align: center;
  font-size: 26rpx;
}
.tab-item.active{
  color: #FF7100;
}
.tab-price {
  position: relative;
}
.tab-price-arrow{
  display: inline-block;
  margin-bottom: 4rpx;
  vertical-align: middle;
}
.tab-price .up, .tab-price .down {
  display: block;
  color: #999;
  overflow: hidden;
  line-height: 14rpx;
  font-size: 16rpx;
  text-align: center;
}
.tab-item .sub-active{
  color: #FF7100;
}
.tab-filter text{
  font-size: 20rpx;
}

