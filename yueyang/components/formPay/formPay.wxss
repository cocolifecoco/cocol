@charset 'utf-8';
@import "/utils/font_icon.wxss";
.form-pay-dialog {
  position: fixed;
  z-index: 3;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.form-content{
  position: relative;
  width: 100%;
  border-radius: 0 0 6rpx 6rpx;
  background-color: #fff;
  padding: 35rpx 40rpx 60rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #666;
}
.form-title {
  border-radius: 6rpx 6rpx 0 0;
  background-color: #fbfbfb;
  padding: 30rpx 40rpx;
  height: 84rpx;
  line-height:84rpx;
  font-size: 26rpx;
  color: #333;
  margin-top:40rpx;
}
.cheques-img {
  width: 84rpx;
  height: 84rpx;
  display: inline-block;
  float: right;
}
.form-amount {
  margin: 35rpx 0;
}
.form-price {
  font-size: 40rpx;
  color: #333;
  margin-left: 10rpx;
}
.marign-top{
  margin-top: 35rpx;
}
.picker {
  border-bottom: 1px solid #F3F3F3;
  padding: 20rpx 0;
  margin: 20rpx 0;
}
.actual-pay {
  color: #333;
  line-height: 72rpx;
  height: 72rpx;
}
.actual-price {
  color: #ff7100;
  font-size: 50rpx;
}
.pay-btn {
  color: #fff;
  background-color: #ff7100;
  font-size: 30rpx;
  line-height: 88rpx;
  height: 88rpx;
}
.pull-right {
  float: right;
}
.left-label {
  width: 160rpx;
  display: inline-block;
  margin-right: 40rpx;
}
.remarks {
  width: 100%;
  margin-top: 20rpx;
  background-color:#F5F5F5;
  height:100rpx;
  vertical-align:top;
  padding: 10rpx;
  box-sizing: border-box;
}
.icon-closes {
  position:absolute;
  border-radius:50%;
  bottom: -60rpx;
  width: 40rpx;
  color:#fff;
  height: 40rpx;
  border: 1px solid #fff;
  text-align:center;
  line-height: 40rpx;
  left: 305rpx;
}