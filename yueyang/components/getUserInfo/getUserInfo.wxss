@charset 'utf-8';

.getUserInfo{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.getUserInfo-bg{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
}
.getUserInfo-inner{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 480rpx;
  padding: 0 40rpx;
  color: #333;
  border-radius: 5rpx;
  background-color: #fff;
}
.getUserInfo-title{
  font-size: 36rpx;
  margin-top: 30rpx;
}
.getUserInfo-view{
  margin-top: 30rpx;
}
.getUserInfo-logo{
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  vertical-align: middle;
}
.getUserInfo-tip{
  display: inline-block;
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.getUserInfo-desc{
  color: #999;
  margin-top: 50rpx;
  font-size: 24rpx;
}
.getUserInfo-desc .getUserInfo-circle{
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  margin-right: 20rpx;
  border-radius: 5rpx;
  background-color: #999;
  vertical-align: middle;
}
.getUserInfo-btn-wrap{
  text-align: right;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}
.getUserInfo-btn{
  display: inline-block;
  height: 60rpx;
  color: #999;
  font-size: 26rpx;
  margin-left: 30rpx;
  background: none;
  padding: 0 20rpx;
  line-height: 60rpx;
  vertical-align: top;
}
.getUserInfo-confirm{
  color: #19AD19;
}
.getUserInfo-setting-tip{
  color: #999;
  margin-top: 50rpx;
  font-size: 26rpx;
}
.getUserInfo-tip-icon{
  display: inline-block;
  vertical-align: middle
}